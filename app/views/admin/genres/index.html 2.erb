<div class="row mt-5">
  <div class="col-md-8">
    <h3 class="mb-5">ジャンル一覧・追加</h3>
    <div class="input mb-5">
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
        ジャンル名 <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-success btn-sm" %>
      <% end %>
    </div>
    <table class="table index col-md-5">
      <thead>
        <tr>
          <th>ジャンル名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
        <% end %>
        
      </tbody>
      
    </table>
  </div>
</div>