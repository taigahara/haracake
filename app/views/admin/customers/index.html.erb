<div class="row mt-5">
  <div class="col-md-8 mx-auto">
    <h3>会員一覧</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="col-md-2">会員ID</th>
          <th class="col-md-3">氏名</th>
          <th>メールアドレス</th>
          <th class="col-md-2">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @end_users.each do |end_user| %>
        <tr>
          <td><%= end_user.id %></td>
          <td><%= end_user.first_name %> <%= end_user.last_name %></td>
          <td><%= end_user.email %></td>
          <td>
            <% if end_user.is_deleted? %>
              <p class="text-danger">退会済み</p>
            <% else %>
              <p class="text-success">有効</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>