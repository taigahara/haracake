<div class="row mt-5">
  <div class="col-md-8">
    <h3 class="mb-5">商品編集</h3>
    <div class="input mb-5">
      <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
        <span>商品画像</span><%= f.attachment_field :image %>
        <span>商品名</span> <%= f.text_field :name %>
        <span>商品説明</span> <%= f.text_area :introdution %>
        <span>ジャンル</span> <%= f.select :genre, genres.all, :genre_id, :id ,include_blank: "選択してください"  %>  <!-- プルダウン -->
        <span>税抜価格</span> <%= f.text_field :price %>
        <span>販売ステータス</span>  <!-- ラジオボタン -->
          <%= f.radio_button :is_sale, :true %>
          <%= f.label :is_sale, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_sale, :false %>
          <%= f.label :is_sale, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        <%= f.submit '変更を保存', class: "btn btn-success btn-sm" %>
      <% end %>
    </div>
  </div>
</div>