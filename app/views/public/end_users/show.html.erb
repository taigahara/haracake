<div class="row mt-5">
  
  <div class="col-md-8">
    <h3 class="mb-5">マイページ</h3>
    <h5 style="display: inline-block" class="mb-4 col-md-2">登録情報</h5>
    <%= link_to "編集する", end_users_mypage_edit_path, class:"btn btn-success btn-sm col-md-2" %>
    
    <table class="table table-bordered mb-4">
      <tbody>
        <tr>
          <th width="30%">氏名</th>
          <td><%= @end_user.last_name %> <%= @end_user.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @end_user.last_name_kana %> <%= @end_user.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @end_user.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @end_user.ship_address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @end_user.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @end_user.email %></td>
        </tr>
      </tbody>
    </table>
    
    <div class="address">
      <h5 style="display: inline-block" class="mb-4 col-md-2">配送先</h5>
      <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary btn-sm col-md-2" %>
    </div>
    <div class="history">
      <h5 style="display: inline-block" class="col-md-2">注文履歴</h5>
      <%= link_to "一覧を見る", "#", class:"btn btn-primary btn-sm col-md-2" %>
    </div>
    
  </div>
</div>